#!/usr/bin/env ruby

if File.exists?("bin/runner") && File.exists?("#{ENV['HOME']}/runner_update/bin/runner")
  puts "Updating..."
  system "rm -rf * && cp -rf ~/runner_update/* . && rm -rf ~/runner_update"
  system "gem install httparty daemons macaddr net-ssh"
  puts "Done, starting runner."
  exec "bin/runner start"
else
  puts "Not run in the right context."
end
